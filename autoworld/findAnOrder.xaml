<Window x:Class="autoworld.findAnOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:autoworld"
        mc:Ignorable="d"
        Title="findAnOrder" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Label Content="Order Archive" Margin="10" FontSize="25"/>
            <TextBox Width="400" Height="30"/>
            <Button Content="Find" Margin="10" Height="30" Width="100"/>
        </StackPanel>
        <StackPanel Grid.Row="1" >
            <Label Content="заказ1" FontSize="25" HorizontalAlignment="Left"  VerticalAlignment="Top"/>
            <Label Content="заказ2"  FontSize="25" HorizontalAlignment="Left"  VerticalAlignment="Top"/>
            <Label Content="заказ3"  FontSize="25" HorizontalAlignment="Left"  VerticalAlignment="Top"/>
            <Label Content="заказ4"  FontSize="25" HorizontalAlignment="Left"  VerticalAlignment="Top"/>
        </StackPanel>
        <Border BorderBrush="Black" BorderThickness="1" Grid.Row="1"/>
    </Grid>
</Window>
